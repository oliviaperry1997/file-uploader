<div class="flex justify-center">
    <div class="max-w-2xl w-full">
        <div class="text-center">
            <i class="fas fa-exclamation-triangle text-6xl text-red-500 mb-6"></i>
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Oops! Something went wrong</h1>
            <p class="text-xl text-gray-600 mb-8">We encountered an error while processing your request.</p>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="bg-red-50 border-l-4 border-red-400 p-4 text-left mb-8 rounded-r">
                    <h5 class="font-semibold text-red-900 mb-2">Error Details:</h5>
                    <p class="text-red-800"><%= error.message || error %></p>
                </div>
            <% } %>
            
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <a href="/" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    <i class="fas fa-home mr-2"></i>
                    Go Home
                </a>
                <button onclick="history.back()" class="inline-flex items-center px-6 py-3 bg-gray-500 text-white font-medium rounded-lg hover:bg-gray-600 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Go Back
                </button>
            </div>
        </div>
    </div>
</div>