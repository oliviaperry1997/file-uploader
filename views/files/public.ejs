<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">Public Files</h1>
            <p class="text-gray-600 mt-2">Files shared publicly by users</p>
        </div>
    </div>

    <% if (files.length === 0) { %>
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="mx-auto w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mb-4">
                <i class="fas fa-folder-open text-3xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No public files</h3>
            <p class="text-gray-600">There are no public files available at the moment.</p>
        </div>
    <% } else { %>
        <!-- Files Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <% files.forEach(file => { %>
                <div class="bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
                    <a href="/files/<%= file.id %>" class="block">
                        <div class="p-6">
                            <!-- File Icon -->
                            <div class="flex items-center justify-center w-12 h-12 mx-auto mb-4 rounded-lg bg-gray-50">
                                <% if (file.mimeType.startsWith('image/')) { %>
                                    <i class="fas fa-image text-xl text-blue-600"></i>
                                <% } else if (file.mimeType === 'application/pdf') { %>
                                    <i class="fas fa-file-pdf text-xl text-red-600"></i>
                                <% } else if (file.mimeType.includes('document') || file.mimeType.includes('word')) { %>
                                    <i class="fas fa-file-word text-xl text-blue-600"></i>
                                <% } else if (file.mimeType.includes('zip') || file.mimeType.includes('archive')) { %>
                                    <i class="fas fa-file-archive text-xl text-yellow-600"></i>
                                <% } else if (file.mimeType.includes('video')) { %>
                                    <i class="fas fa-file-video text-xl text-purple-600"></i>
                                <% } else if (file.mimeType.includes('audio')) { %>
                                    <i class="fas fa-file-audio text-xl text-green-600"></i>
                                <% } else { %>
                                    <i class="fas fa-file text-xl text-gray-600"></i>
                                <% } %>
                            </div>

                            <!-- File Info -->
                            <div class="text-center">
                                <h3 class="text-sm font-medium text-gray-900 mb-1 truncate" title="<%= file.originalName %>">
                                    <%= file.originalName %>
                                </h3>
                                <p class="text-xs text-gray-500 mb-2">
                                    <%= (file.size / 1024).toFixed(1) %> KB
                                </p>
                                <p class="text-xs text-gray-400">
                                    Shared by <%= file.user.name %>
                                </p>
                                <% if (file.folder) { %>
                                    <p class="text-xs text-gray-400 mt-1">
                                        <i class="fas fa-folder text-gray-400 mr-1"></i>
                                        <%= file.folder.name %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                        
                        <!-- Footer with date -->
                        <div class="px-6 py-3 bg-gray-50 border-t border-gray-200 rounded-b-lg">
                            <p class="text-xs text-gray-500 text-center">
                                <i class="fas fa-clock mr-1"></i>
                                <%= new Date(file.uploadedAt).toLocaleDateString() %>
                            </p>
                        </div>
                    </a>
                </div>
            <% }); %>
        </div>
    <% } %>

    <!-- Back to main site link -->
    <div class="mt-8 text-center">
        <a href="/" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
            <i class="fas fa-home mr-2"></i>
            Back to Home
        </a>
    </div>
</div>

