<% layout('../layout') -%>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="fas fa-folder-open me-2"></i>
        My Files
    </h2>
    <a href="/files/upload" class="btn btn-primary">
        <i class="fas fa-plus me-1"></i>
        Upload New File
    </a>
</div>

<% if (files.length === 0) { %>
<div class="text-center py-5">
    <i class="fas fa-folder-open fa-4x text-muted mb-3"></i>
    <h4 class="text-muted">No files uploaded yet</h4>
    <p class="text-muted">Start by uploading your first file!</p>
    <a href="/files/upload" class="btn btn-primary">
        <i class="fas fa-upload me-1"></i>
        Upload File
    </a>
</div>
<% } else { %>
<div class="row">
    <% files.forEach(file => { %>
    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
            <div class="card-body">
                <div class="d-flex align-items-start">
                    <div class="flex-shrink-0 me-3">
                        <% if (file.mimeType.startsWith('image/')) { %>
                        <i class="fas fa-image fa-2x text-primary"></i>
                        <% } else if (file.mimeType === 'application/pdf') { %>
                        <i class="fas fa-file-pdf fa-2x text-danger"></i>
                        <% } else if (file.mimeType.includes('document') ||
                        file.mimeType.includes('word')) { %>
                        <i class="fas fa-file-word fa-2x text-primary"></i>
                        <% } else if (file.mimeType.includes('zip') ||
                        file.mimeType.includes('archive')) { %>
                        <i class="fas fa-file-archive fa-2x text-warning"></i>
                        <% } else { %>
                        <i class="fas fa-file fa-2x text-secondary"></i>
                        <% } %>
                    </div>
                    <div class="flex-grow-1">
                        <h6
                            class="card-title text-truncate"
                            title="<%= file.originalName %>"
                        >
                            <%= file.originalName %>
                        </h6>
                        <% if (file.description) { %>
                        <p class="card-text text-muted small">
                            <%= file.description.substring(0, 100) %><%=
                            file.description.length > 100 ? '...' : '' %>
                        </p>
                        <% } %>
                        <div class="small text-muted">
                            <div>
                                <i class="fas fa-calendar me-1"></i><%= new
                                Date(file.uploadedAt).toLocaleDateString() %>
                            </div>
                            <div>
                                <i class="fas fa-weight me-1"></i><%= (file.size
                                / 1024).toFixed(1) %> KB
                            </div>
                            <% if (file.isPublic) { %>
                            <div><i class="fas fa-globe me-1"></i>Public</div>
                            <% } else { %>
                            <div><i class="fas fa-lock me-1"></i>Private</div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer bg-transparent">
                <div class="d-flex justify-content-between">
                    <a
                        href="/files/<%= file.id %>/download"
                        class="btn btn-sm btn-outline-primary"
                    >
                        <i class="fas fa-download me-1"></i>
                        Download
                    </a>
                    <button
                        class="btn btn-sm btn-outline-danger"
                        onclick="deleteFile('<%= file.id %>')"
                    >
                        <i class="fas fa-trash me-1"></i>
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
</div>
<% } %>

<script>
    function deleteFile(fileId) {
        if (
            confirm(
                "Are you sure you want to delete this file? This action cannot be undone."
            )
        ) {
            fetch(`/files/${fileId}`, {
                method: "DELETE",
                headers: {
                    "Content-Type": "application/json",
                },
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert(
                            "Error deleting file: " +
                                (data.error || "Unknown error")
                        );
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                    alert("Error deleting file");
                });
        }
    }
</script>
