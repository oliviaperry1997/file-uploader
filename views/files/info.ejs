<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header with breadcrumbs -->
    <div class="mb-8">
        <nav class="flex mb-4" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/files" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                        <i class="fas fa-file mr-2"></i>
                        My Files
                    </a>
                </li>
                <% if (file.folder) { %>
                    <li>
                        <div class="flex items-center">
                            <i class="fas fa-chevron-right text-gray-400 mx-1"></i>
                            <a href="/folders?parent=<%= file.folder.id %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">
                                <%= file.folder.name %>
                            </a>
                        </div>
                    </li>
                <% } %>
                <li aria-current="page">
                    <div class="flex items-center">
                        <i class="fas fa-chevron-right text-gray-400 mx-1"></i>
                        <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2 truncate max-w-xs">
                            <%= file.originalName %>
                        </span>
                    </div>
                </li>
            </ol>
        </nav>
        
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                    <% if (file.mimeType.startsWith('image/')) { %>
                        <i class="fas fa-image text-4xl text-blue-600"></i>
                    <% } else if (file.mimeType === 'application/pdf') { %>
                        <i class="fas fa-file-pdf text-4xl text-red-600"></i>
                    <% } else if (file.mimeType.includes('document') || file.mimeType.includes('word')) { %>
                        <i class="fas fa-file-word text-4xl text-blue-600"></i>
                    <% } else if (file.mimeType.includes('zip') || file.mimeType.includes('archive')) { %>
                        <i class="fas fa-file-archive text-4xl text-yellow-600"></i>
                    <% } else if (file.mimeType.includes('video')) { %>
                        <i class="fas fa-file-video text-4xl text-purple-600"></i>
                    <% } else if (file.mimeType.includes('audio')) { %>
                        <i class="fas fa-file-audio text-4xl text-green-600"></i>
                    <% } else { %>
                        <i class="fas fa-file text-4xl text-gray-600"></i>
                    <% } %>
                </div>
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 break-words">
                        <%= file.originalName %>
                    </h1>
                    <% if (file.description) { %>
                        <p class="text-gray-600 mt-2"><%= file.description %></p>
                    <% } %>
                </div>
            </div>
            <div class="flex space-x-3">
                <a href="/files/<%= file.id %>/download" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-download mr-2"></i>
                    Download
                </a>
                <% if (canEdit) { %>
                    <button onclick="deleteFile('<%= file.id %>')"
                            class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                        <i class="fas fa-trash mr-2"></i>
                        Delete
                    </button>
                <% } %>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- File Preview -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow-md border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Preview</h3>
                </div>
                <div class="p-6">
                    <% if (file.mimeType.startsWith('image/')) { %>
                        <!-- Image Preview -->
                        <div class="text-center">
                            <img src="/files/<%= file.id %>/download" 
                                 alt="<%= file.originalName %>"
                                 class="max-w-full h-auto mx-auto rounded-lg shadow-sm"
                                 style="max-height: 500px;">
                        </div>
                    <% } else if (file.mimeType === 'application/pdf') { %>
                        <!-- PDF Preview -->
                        <div class="text-center">
                            <div class="bg-gray-100 rounded-lg p-8">
                                <i class="fas fa-file-pdf text-6xl text-red-500 mb-4"></i>
                                <p class="text-gray-600 mb-4">PDF Document</p>
                                <a href="/files/<%= file.id %>/download" 
                                   class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700">
                                    <i class="fas fa-eye mr-2"></i>
                                    View PDF
                                </a>
                            </div>
                        </div>
                    <% } else if (file.mimeType.includes('text/') || file.mimeType.includes('json') || file.mimeType.includes('javascript') || file.mimeType.includes('css')) { %>
                        <!-- Text File Preview -->
                        <div class="bg-gray-100 rounded-lg p-4">
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-sm text-gray-600">Text file content preview</span>
                                <a href="/files/<%= file.id %>/download" class="text-blue-600 hover:text-blue-500 text-sm">
                                    View full file
                                </a>
                            </div>
                            <div class="bg-white rounded border p-4 max-h-96 overflow-y-auto">
                                <pre class="text-sm text-gray-800 whitespace-pre-wrap" id="textPreview">Loading preview...</pre>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Generic File Preview -->
                        <div class="text-center py-12">
                            <% if (file.mimeType.includes('video')) { %>
                                <i class="fas fa-file-video text-6xl text-purple-500 mb-4"></i>
                                <p class="text-gray-600 mb-4">Video File</p>
                            <% } else if (file.mimeType.includes('audio')) { %>
                                <i class="fas fa-file-audio text-6xl text-green-500 mb-4"></i>
                                <p class="text-gray-600 mb-4">Audio File</p>
                            <% } else if (file.mimeType.includes('zip') || file.mimeType.includes('archive')) { %>
                                <i class="fas fa-file-archive text-6xl text-yellow-500 mb-4"></i>
                                <p class="text-gray-600 mb-4">Archive File</p>
                            <% } else { %>
                                <i class="fas fa-file text-6xl text-gray-500 mb-4"></i>
                                <p class="text-gray-600 mb-4">File preview not available</p>
                            <% } %>
                            <a href="/files/<%= file.id %>/download" 
                               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                                <i class="fas fa-download mr-2"></i>
                                Download to view
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- File Information and Actions -->
        <div class="space-y-6">
            <!-- File Details -->
            <div class="bg-white rounded-lg shadow-md border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">File Details</h3>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="text-sm font-medium text-gray-700">File Name</label>
                        <p class="text-gray-900 break-words"><%= file.originalName %></p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">File Size</label>
                        <p class="text-gray-900">
                            <% if (file.size >= 1024 * 1024) { %>
                                <%= (file.size / (1024 * 1024)).toFixed(2) %> MB
                            <% } else { %>
                                <%= (file.size / 1024).toFixed(1) %> KB
                            <% } %>
                        </p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">File Type</label>
                        <p class="text-gray-900"><%= file.mimeType %></p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">Uploaded</label>
                        <p class="text-gray-900"><%= new Date(file.uploadedAt).toLocaleString() %></p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">Uploaded by</label>
                        <p class="text-gray-900"><%= file.user.name %></p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">Visibility</label>
                        <p class="text-gray-900">
                            <% if (file.isPublic) { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    <i class="fas fa-globe mr-1"></i>
                                    Public
                                </span>
                            <% } else { %>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    <i class="fas fa-lock mr-1"></i>
                                    Private
                                </span>
                            <% } %>
                        </p>
                    </div>
                    <div>
                        <label class="text-sm font-medium text-gray-700">Current Folder</label>
                        <p class="text-gray-900">
                            <% if (file.folder) { %>
                                <a href="/folders?parent=<%= file.folder.id %>" class="text-blue-600 hover:text-blue-500 inline-flex items-center">
                                    <i class="fas fa-folder mr-1"></i>
                                    <%= file.folder.name %>
                                </a>
                            <% } else { %>
                                <span class="text-gray-500 inline-flex items-center">
                                    <i class="fas fa-home mr-1"></i>
                                    Root
                                </span>
                            <% } %>
                        </p>
                    </div>
                </div>
            </div>

            <!-- Folder Assignment (only if user can edit) -->
            <% if (canEdit) { %>
            <div class="bg-white rounded-lg shadow-md border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Move to Folder</h3>
                </div>
                <div class="p-6">
                    <form method="POST" action="/files/<%= file.id %>/assign-folder" 
                          onsubmit="console.log('Form submitting to:', this.action); event.stopPropagation(); return true;">
                        <div class="mb-4">
                            <label for="folderId" class="block text-sm font-medium text-gray-700 mb-2">
                                Select Folder
                            </label>
                            <select id="folderId" 
                                    name="folderId" 
                                    class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                                <option value="">Root (No folder)</option>
                                <% folders.forEach(folder => { %>
                                    <option value="<%= folder.id %>" 
                                            <%= file.folderId === folder.id ? 'selected' : '' %>>
                                        <%= folder.name %>
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <button type="submit" 
                                onclick="console.log('Submit button clicked'); event.stopPropagation();"
                                class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <i class="fas fa-folder mr-2"></i>
                            Move File
                        </button>
                    </form>
                    
                    <!-- Debug info -->
                    <div class="mt-2 text-xs text-gray-500">
                        Debug: Action should be /files/<%= file.id %>/assign-folder
                    </div>
                </div>
            </div>
            <% } %>

            <!-- Quick Actions -->
            <div class="bg-white rounded-lg shadow-md border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Actions</h3>
                </div>
                <div class="p-6 space-y-3">
                    <a href="/files/<%= file.id %>/download" 
                       class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-download mr-2"></i>
                        Download File
                    </a>
                    <% if (canEdit) { %>
                        <button onclick="deleteFile('<%= file.id %>')"
                                class="w-full inline-flex justify-center items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-red-50 hover:bg-red-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <i class="fas fa-trash mr-2"></i>
                            Delete File
                        </button>
                    <% } %>
                    <a href="/files" 
                       class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        <i class="fas fa-arrow-left mr-2"></i>
                        Back to Files
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete confirmation script -->
<script>
function deleteFile(fileId) {
    if (confirm('Are you sure you want to delete this file? This action cannot be undone.')) {
        fetch(`/files/${fileId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                window.location.href = '/files';
            } else {
                alert('Error deleting file: ' + (data.error || 'Unknown error'));
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Error deleting file');
        });
    }
}
</script>

<!-- Text file preview loading -->
<% const isTextFile = file.mimeType.includes('text/') || file.mimeType.includes('json') || file.mimeType.includes('javascript') || file.mimeType.includes('css'); %>
<% if (isTextFile) { %>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const previewElement = document.getElementById('textPreview');
    if (previewElement) {
        fetch('/files/<%= file.id %>/download')
            .then(response => response.text())
            .then(text => {
                // Limit preview to first 5000 characters
                const previewText = text.length > 5000 ? text.substring(0, 5000) + '\n\n... (file truncated for preview)' : text;
                previewElement.textContent = previewText;
            })
            .catch(error => {
                console.error('Error loading text preview:', error);
                previewElement.textContent = 'Unable to load file preview.';
            });
    }
});
</script>
<% } %>