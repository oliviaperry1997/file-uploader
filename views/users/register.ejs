<div class="flex justify-center">
    <div class="w-full max-w-md">
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
            <div class="bg-gradient-to-r from-blue-600 to-purple-600 px-6 py-4">
                <h3 class="flex items-center text-xl font-semibold text-white">
                    <i class="fas fa-user-plus mr-2"></i>
                    Register
                </h3>
            </div>
            <div class="p-6">
                <% if ((errors && errors.length > 0) || (error && error.length > 0)) { %>
                    <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6 rounded-r">
                        <ul class="text-red-700 space-y-1">
                            <% if (errors && errors.length > 0) { %>
                                <% errors.forEach(validationError => { %>
                                    <li><%= validationError.msg %></li>
                                <% }); %>
                            <% } %>
                            <% if (error && error.length > 0) { %>
                                <% error.forEach(authError => { %>
                                    <li><%= authError %></li>
                                <% }); %>
                            <% } %>
                        </ul>
                    </div>
                <% } %>
                
                <form method="POST" action="/users/register" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                        <input type="text" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               id="name" name="name" 
                               value="<%= typeof name !== 'undefined' ? name : '' %>" 
                               required>
                    </div>
                    
                    <div>
                        <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
                        <input type="email" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               id="email" name="email" 
                               value="<%= typeof email !== 'undefined' ? email : '' %>" 
                               required>
                    </div>
                    
                    <div>
                        <label for="password" class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input type="password" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               id="password" name="password" 
                               required>
                    </div>
                    
                    <div>
                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-2">Confirm Password</label>
                        <input type="password" 
                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" 
                               id="confirmPassword" name="confirmPassword" 
                               required>
                    </div>
                    
                    <button type="submit" class="w-full flex items-center justify-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                        <i class="fas fa-user-plus mr-2"></i>
                        Register
                    </button>
                </form>
                
                <div class="text-center mt-6">
                    <p class="text-gray-600">
                        Already have an account? 
                        <a href="/users/login" class="text-blue-600 hover:text-blue-800 font-medium">Login here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>