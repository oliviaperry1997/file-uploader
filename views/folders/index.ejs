<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Header with breadcrumbs -->
    <div class="mb-8">
        <div class="flex items-center justify-between">
            <div>
                <nav class="flex mb-4" aria-label="Breadcrumb">
                    <ol class="inline-flex items-center space-x-1 md:space-x-3">
                        <li class="inline-flex items-center">
                            <a href="/folders" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                                <i class="fas fa-home mr-2"></i>
                                Root
                            </a>
                        </li>
                        <% if (currentFolder) { %>
                            <% let breadcrumbPath = ''; %>
                            <% if (currentFolder.parent) { %>
                                <li>
                                    <div class="flex items-center">
                                        <i class="fas fa-chevron-right text-gray-400 mx-1"></i>
                                        <a href="/folders?parent=<%= currentFolder.parent.id %>" class="ml-1 text-sm font-medium text-gray-700 hover:text-blue-600 md:ml-2">
                                            <%= currentFolder.parent.name %>
                                        </a>
                                    </div>
                                </li>
                            <% } %>
                            <li aria-current="page">
                                <div class="flex items-center">
                                    <i class="fas fa-chevron-right text-gray-400 mx-1"></i>
                                    <span class="ml-1 text-sm font-medium text-gray-500 md:ml-2"><%= currentFolder.name %></span>
                                </div>
                            </li>
                        <% } %>
                    </ol>
                </nav>
                
                <h1 class="text-3xl font-bold text-gray-900">
                    <% if (currentFolder) { %>
                        <%= currentFolder.name %>
                    <% } else { %>
                        My Folders
                    <% } %>
                </h1>
                <% if (currentFolder && currentFolder.description) { %>
                    <p class="mt-2 text-gray-600"><%= currentFolder.description %></p>
                <% } %>
            </div>
            <div class="flex space-x-3">
                <a href="/folders/new<% if (currentFolder) { %>?parent=<%= currentFolder.id %><% } %>" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-folder-plus mr-2"></i>
                    New Folder
                </a>
                <a href="/files/upload<% if (currentFolder) { %>?folder=<%= currentFolder.id %><% } %>" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    <i class="fas fa-upload mr-2"></i>
                    Upload File
                </a>
            </div>
        </div>
    </div>

    <!-- Folders and Files Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <!-- Folders -->
        <% folders.forEach(folder => { %>
            <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 border border-gray-200">
                <div class="p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center">
                            <i class="fas fa-folder text-blue-500 text-2xl mr-3"></i>
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900 truncate">
                                    <%= folder.name %>
                                </h3>
                                <div class="text-sm text-gray-500 mt-1">
                                    <%= folder._count.files %> files, <%= folder._count.children %> folders
                                </div>
                            </div>
                        </div>
                        <div class="relative dropdown">
                            <button class="text-gray-400 hover:text-gray-600 p-1 dropdown-toggle" type="button">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div class="dropdown-menu absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg border border-gray-200 z-10 hidden">
                                <a href="/folders/<%= folder.id %>/edit" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-edit mr-2"></i>Edit
                                </a>
                                <form method="POST" action="/folders/<%= folder.id %>?_method=DELETE" 
                                      onsubmit="return confirm('Are you sure you want to delete this folder?')" class="block">
                                    <button type="submit" class="w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-100">
                                        <i class="fas fa-trash mr-2"></i>Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                    
                    <% if (folder.description) { %>
                        <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= folder.description %></p>
                    <% } %>
                    
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">
                            Created <%= new Date(folder.createdAt).toLocaleDateString() %>
                        </span>
                        <a href="/folders?parent=<%= folder.id %>" 
                           class="inline-flex items-center text-sm font-medium text-blue-600 hover:text-blue-500">
                            Open
                            <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>

    <!-- Empty state -->
    <% if (folders.length === 0) { %>
        <div class="text-center py-12">
            <i class="fas fa-folder-open text-gray-400 text-6xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">
                <% if (currentFolder) { %>
                    This folder is empty
                <% } else { %>
                    No folders yet
                <% } %>
            </h3>
            <p class="text-gray-600 mb-6">
                <% if (currentFolder) { %>
                    Start by creating a new folder or uploading files here.
                <% } else { %>
                    Get started by creating your first folder to organize your files.
                <% } %>
            </p>
            <div class="flex justify-center space-x-3">
                <a href="/folders/new<% if (currentFolder) { %>?parent=<%= currentFolder.id %><% } %>" 
                   class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                    <i class="fas fa-folder-plus mr-2"></i>
                    Create Folder
                </a>
                <a href="/files/upload<% if (currentFolder) { %>?folder=<%= currentFolder.id %><% } %>" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">
                    <i class="fas fa-upload mr-2"></i>
                    Upload File
                </a>
            </div>
        </div>
    <% } %>
</div>

<!-- Dropdown JavaScript -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle dropdown menus
    const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
    
    dropdownToggles.forEach(toggle => {
        toggle.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            const dropdown = this.closest('.dropdown');
            const menu = dropdown.querySelector('.dropdown-menu');
            
            // Close other dropdowns
            document.querySelectorAll('.dropdown-menu').forEach(otherMenu => {
                if (otherMenu !== menu) {
                    otherMenu.classList.add('hidden');
                }
            });
            
            // Toggle current dropdown
            menu.classList.toggle('hidden');
        });
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', function() {
        document.querySelectorAll('.dropdown-menu').forEach(menu => {
            menu.classList.add('hidden');
        });
    });
});
</script>