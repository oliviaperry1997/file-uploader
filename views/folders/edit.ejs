<div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white shadow-lg rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
            <h2 class="text-2xl font-bold text-gray-900">Edit Folder</h2>
            <p class="mt-1 text-sm text-gray-600">Update your folder's name, description, or location.</p>
        </div>

        <form method="POST" action="/folders/<%= folder.id %>?_method=PUT" class="px-6 py-6 space-y-6">
            <!-- Folder Name -->
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                    Folder Name <span class="text-red-500">*</span>
                </label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       required 
                       maxlength="100"
                       value="<%= folder.name %>"
                       class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Enter folder name">
                <p class="mt-1 text-sm text-gray-500">Choose a descriptive name for your folder.</p>
            </div>

            <!-- Description -->
            <div>
                <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                    Description
                </label>
                <textarea id="description" 
                          name="description" 
                          rows="3"
                          maxlength="500"
                          class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                          placeholder="Optional description for this folder"><%= folder.description || '' %></textarea>
                <p class="mt-1 text-sm text-gray-500">Add an optional description to help identify this folder's contents.</p>
            </div>

            <!-- Parent Folder Selection -->
            <div>
                <label for="parentId" class="block text-sm font-medium text-gray-700 mb-2">
                    Parent Folder
                </label>
                <select id="parentId" 
                        name="parentId" 
                        class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Root (No parent folder)</option>
                    <% allFolders.forEach(otherFolder => { %>
                        <option value="<%= otherFolder.id %>" 
                                <%= folder.parentId === otherFolder.id ? 'selected' : '' %>>
                            <%= otherFolder.name %>
                        </option>
                    <% }); %>
                </select>
                <p class="mt-1 text-sm text-gray-500">Choose where this folder should be located. Leave blank to move to the root directory.</p>
            </div>

            <!-- Folder Info -->
            <div class="bg-gray-50 p-4 rounded-md">
                <h4 class="text-sm font-medium text-gray-900 mb-2">Folder Information</h4>
                <div class="text-sm text-gray-600 space-y-1">
                    <p><strong>Created:</strong> <%= new Date(folder.createdAt).toLocaleString() %></p>
                    <p><strong>Last Updated:</strong> <%= new Date(folder.updatedAt).toLocaleString() %></p>
                    <% if (folder.parent) { %>
                        <p><strong>Current Parent:</strong> <%= folder.parent.name %></p>
                    <% } else { %>
                        <p><strong>Location:</strong> Root directory</p>
                    <% } %>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex items-center justify-end space-x-3 pt-6 border-t border-gray-200">
                <a href="/folders<% if (folder.parentId) { %>?parent=<%= folder.parentId %><% } %>" 
                   class="inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Cancel
                </a>
                <button type="submit" 
                        class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-save mr-2"></i>
                    Update Folder
                </button>
            </div>
        </form>
    </div>
</div>