<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="text-center mb-5">
            <h1 class="display-4">
                <i class="fas fa-cloud-upload-alt text-primary"></i>
                Welcome to File Uploader
            </h1>
            <p class="lead">Securely upload, manage, and share your files</p>
        </div>
        
        <% if (typeof user !== 'undefined' && user) { %>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-upload fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Upload Files</h5>
                            <p class="card-text">Upload your documents, images, and other files securely.</p>
                            <a href="/files/upload" class="btn btn-primary">
                                Start Uploading
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-folder-open fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Manage Files</h5>
                            <p class="card-text">View, download, and organize all your uploaded files.</p>
                            <a href="/files" class="btn btn-success">
                                View My Files
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="alert alert-info mt-4">
                <h5><i class="fas fa-info-circle me-2"></i>Welcome back, <%= user.name %>!</h5>
                <p class="mb-0">You can upload files up to 10MB in size. Supported formats: JPEG, PNG, GIF, PDF, DOC, DOCX, TXT, ZIP.</p>
            </div>
        <% } else { %>
            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
                            <h5 class="card-title">Get Started</h5>
                            <p class="card-text">Create an account to start uploading and managing your files.</p>
                            <a href="/users/register" class="btn btn-primary">
                                Register Now
                            </a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-body text-center">
                            <i class="fas fa-sign-in-alt fa-3x text-success mb-3"></i>
                            <h5 class="card-title">Already Have Account?</h5>
                            <p class="card-text">Sign in to access your files and upload new ones.</p>
                            <a href="/users/login" class="btn btn-success">
                                Sign In
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="alert alert-primary mt-4">
                <h5><i class="fas fa-shield-alt me-2"></i>Secure File Storage</h5>
                <p class="mb-0">Your files are stored securely and only accessible by you unless you choose to make them public.</p>
            </div>
        <% } %>
    </div>
</div>